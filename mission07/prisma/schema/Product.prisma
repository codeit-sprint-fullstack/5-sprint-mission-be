model Product {
  id            String   @id @default(uuid())
  idx           Int      @default(autoincrement())
  favoriteCount Int      @default(0)
  ownerNickname String?
  ownerId       Int?
  images        String[]
  tags          String[]
  price         Int
  description   String
  name          String
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
  comments Comment[]
}
