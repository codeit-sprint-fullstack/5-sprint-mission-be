generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"] //별개의 파일로 모델을 나눠서 관리할수있음
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// npx prisma migrate dev
/// npx prisma studio

/// 유저 정보 이미지는 모르니까 basicImg로 일단 통일
model User {
  id            String          @id @default(uuid())
  email         String          @unique
  nickName      String          @unique
  password      String          @unique
  profileImg    String?         @default("basicImg") // 프로필 이미지 있는거 같든데
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  comment       Comment[]
  bulletinBoard BulletinBoard[]
}
